def pattern(n):
    for j in  range(1,n+1):
        for i in range(1,n+1):
            if i<j:
                print("*",end=" ")
            if i==j:
                print(" ",end=" ")
            if i>j:
                print("*",end=" ")
        print()
n=5
pattern(n)




        

                
        
